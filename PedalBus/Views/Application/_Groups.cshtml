@model IEnumerable<PedalBus.Models.Group>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Advertise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Privileged)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sensitivity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModified)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advertise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Privileged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sensitivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
        </tr>
    }

</table>
